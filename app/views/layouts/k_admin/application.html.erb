<!DOCTYPE html>
<html>
  <head>
    <title> <%= t("app.name") %> </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- Stylesheets -->
    <% if content_for?(:custom_stylesheets) %>
      <%= yield(:custom_stylesheets) %>
    <% else %>
      <!-- Include fonts -->
      <%= load_default_fonts %>
      <!-- Just Stylesheets -->
      <%= load_default_stylesheets %>      
    <% end %>

    <%= yield(:extra_stylesheets) %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <div>
      <!--BEGIN BACK TO TOP-->
      <a id="totop" href="#"><i class="fa fa-angle-up"></i></a>
      <!--END BACK TO TOP-->
      <!--BEGIN TOPBAR-->
        <div id="header-topbar-option-demo" class="page-header-topbar">
          <nav id="topbar" role="navigation" style="margin-bottom: 0;" data-step="3" class="navbar navbar-default navbar-static-top">
            <div class="navbar-header">
              <button type="button" data-toggle="collapse" data-target=".sidebar-collapse" class="navbar-toggle">
                <span class="sr-only"><%= t("app.instructions.toggle_navigation") %></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a id="logo" href="index.html" class="navbar-brand">
                <span class="fa fa-rocket"></span>
                <span class="logo-text">
                  <%= yield :app_logo %>
                </span>
                <span style="display: none" class="logo-text-icon">Âµ</span>
              </a>
            </div>
            <div class="topbar-main">
              <a id="menu-toggle" href="#" class="hidden-xs"><i class="fa fa-bars"></i></a>              
              <ul class="nav navbar navbar-top-links navbar-right mbn">
                <%= yield :top_right_options %>
              </ul>
            </div>
          </nav>
        </div>
        <!--END TOPBAR-->
        <div id="wrapper">
          <!--BEGIN SIDEBAR MENU-->
          <nav id="sidebar" role="navigation" data-step="2" data-intro="Template has &lt;b&gt;many navigation styles&lt;/b&gt;" data-position="right" class="navbar-default navbar-static-side">
            <div class="sidebar-collapse menu-scroll">
                <ul id="side-menu" class="nav">
                  <div class="clearfix"></div>
                  <%= yield :application_menu %>
                </ul>
            </div>
          </nav>
          <!--END SIDEBAR MENU-->
          <%= yield :extra_content %>          
          <!--BEGIN PAGE WRAPPER-->
          <div id="page-wrapper">
            <!--BEGIN TITLE & BREADCRUMB PAGE-->
            <div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
              <%= yield :page_title %>
              <div class="clearfix">
              </div>              
            </div>
            <!--END TITLE & BREADCRUMB PAGE-->
            <!--BEGIN CONTENT-->
            <div class="page-content">
              <div id="tab-general">
                <%= yield %>
              </div>
            </div>
            <!--END CONTENT-->
            <!--BEGIN FOOTER-->
            <div id="footer">
                <div class="copyright">
                  <%= yield(:app_footer) %>
                </div>
            </div>
            <!--END FOOTER-->              

          </div>
          <!--END PAGE WRAPPER-->
        </div>
    </div>
    <!-- Javascripts -->
    <% if content_for?(:custom_scripts) %>
      <%= yield(:custom_scripts) %>
    <% else %>
      <%= load_default_javascripts %>
    <% end %>

    <%= yield(:extra_scripts) %>

  </body>
</html>
