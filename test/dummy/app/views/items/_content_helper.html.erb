<% content_for :extra_scripts do %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript">
    $(document).ready( function() {

      $.fn.customDataTable = function() {
        var tbl_ptr;
        for (var i = 0; i < this.length; ++i) {
          tbl_ptr = this.eq( i );
          headers = tbl_ptr.find( '> thead > tr > th' );
          tbl_ptr.dataTable({
            "aoColumnDefs": [
              { 'bSortable': false, 'aTargets': [ (headers.length - 1) ] }
            ]
          });
        }
        //$('#example').dataTable();
      };

    } );
  </script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#example').customDataTable();
    } );
  </script>
<% end %>
